@model IEnumerable<BetEuro.Match>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Index</h4>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.HomeTeam.LongName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AwayTeam.LongName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Factor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.HomeTeam.LongName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AwayTeam.LongName)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.Factor)
        </td>       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
